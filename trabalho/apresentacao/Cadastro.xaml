<Window x:Class="trabalho.apresentacao.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trabalho.apresentacao"
        mc:Ignorable="d"
        Title="Cadastro" Height="680" Width="1370" WindowState="Maximized" OpacityMask="Black">
    <Window.Background>
        <ImageBrush ImageSource="../imagens/stars.jpg"/>
    </Window.Background>


    <Grid Margin="10,6,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="485" Stroke="Black" VerticalAlignment="Top" Width="990" Fill="#FF1B1B1B" RadiusX="8" RadiusY="8" Grid.Row="1" Opacity="0.68" Grid.RowSpan="2" Margin="33,1,0,0"/>

        <Image x:Name="logo" Grid.Row="0" Source="../imagens/logo.png" MouseLeftButtonDown="logo_click"  Stretch="UniformToFill"  IsEnabled="False"  Height="104"  HorizontalAlignment="Left" Width="225"   VerticalAlignment="Top" Margin="-18,-22,0,0" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Image.OpacityMask>
                <ImageBrush ImageSource="../imagens/logo.png" TileMode="None" Stretch="None"/>
            </Image.OpacityMask>
        </Image>

        <Menu x:Name="menu" HorizontalAlignment="Left" Grid.Row="1" Background="#FF1B1B1B" Width="204" Opacity="0.85" Grid.RowSpan="2">
            <MenuItem Header="Categorias"  Background="#FF323232" Foreground="White"  Width="220" Margin="0,87,0,0" FontFamily="Haettenschweiler" FontSize="22" >
                <MenuItem x:Name="Romance" Header="Romance" Click="Romance_Click"  Foreground="#FFFFF6F6" Background="#FF171819"/>
                <MenuItem x:Name="Mangas" Header="Mangás" Background="#FF323232" Click="Mangas_Click"  Foreground="White"/>
                <MenuItem x:Name="Misterio" Header="Misterio" Background="#FF323232" Click="Misterio_Click"  Foreground="White"/>
                <MenuItem x:Name="Terror" Header="Terror" Background="#FF323232"  Click="Terror_Click" Foreground="White"/>
            </MenuItem>
        </Menu>

        <Button x:Name="btn_perfil" Grid.Row="1" HorizontalAlignment="Left" Margin="168,51,0,0" VerticalAlignment="Top" Width="29" Height="31" Click="btn_perfil_Click">
            <Button.Background>
                <ImageBrush ImageSource="../imagens/perfil_icon.png"/>
            </Button.Background>
        </Button>

        <Label x:Name="lblNome_Cad" Content="Nome completo:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,20,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblUser_Cad" Content="Nome de usuário:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,60,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lbl_Email_Cad" Content="Email:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,100,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblGender_Cad" Content="Gênero:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,140,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblCidade_Cad" Content="Cidade:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,180,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblEstado_Cad" Content="Estado:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,220,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblCel_Cad" Content="WhatsApp:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,15,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblPass_Cad" Content="Senha:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,55,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lbl_Confirm_Pass_Cad" Content="Confirmar senha:" Grid.Column="1" HorizontalAlignment="Left" Margin="320,95,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>

        <TextBox x:Name="txt_Nome_Cad" Grid.Column="1" Style="{StaticResource Estilo_Placeholder}" Tag="Digite seu nome..." HorizontalAlignment="Left" Margin="480,20,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="150" AcceptsTab="True"/>
        <TextBox x:Name="txt_User_Cad" Grid.Column="1" Style="{StaticResource Estilo_Placeholder}" Tag="Digite um username..." HorizontalAlignment="Left" Margin="480,60,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="150" AcceptsTab="True"/>
        <TextBox x:Name="txt_Email_Cad" Grid.Column="1" Style="{StaticResource Estilo_Placeholder}" Tag="Digite seu email..." HorizontalAlignment="Left" Margin="480,100,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="150" AutoWordSelection="True"/>
        <TextBox x:Name="txt_Cidade_Cad" Grid.Column="1" Style="{StaticResource Estilo_Placeholder}" Tag="Digite sua cidade..." HorizontalAlignment="Left" Margin="480,180,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="150" AcceptsTab="True"/>
        <TextBox x:Name="txt_DDD_Cad" Grid.Column="1" Style="{StaticResource Estilo_Placeholder}" Tag="DDD..." HorizontalAlignment="Left" Margin="480,15,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="45" AcceptsTab="True"/>
        <TextBox x:Name="txt_Cel_Cad" Grid.Column="1" Style="{StaticResource Estilo_Placeholder}" Tag="Digite seu celular..." HorizontalAlignment="Left" Margin="530,15,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="100" AcceptsTab="True"/>
        <PasswordBox x:Name="txt_Pass_Cad" MinHeight="8" Grid.Column="1" HorizontalAlignment="Left" Margin="480,55,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25" Width="150"/>
        <PasswordBox x:Name="txt_Pass_Cad_Confirm" MinHeight="8" Grid.Column="1" HorizontalAlignment="Left" Margin="480,95,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25" Width="150"/>

        <Image Source="https://i.pinimg.com/originals/4e/a2/ea/4ea2ea56f1798863bebccfaa2c6c38b5.png" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="390,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" />
        <Button x:Name="btn_Cadastrar_Cad" Content="Cadastrar" Grid.Column="1" HorizontalAlignment="Left" Margin="360,147,0,0" Grid.Row="2" VerticalAlignment="Top" Width="80" Click="btn_Cadastrar_Cad_Click"/>
        <Button x:Name="btn_Limpar_Cad" Content="Limpar" Grid.Column="1" HorizontalAlignment="Left" Margin="445,147,0,0" Grid.Row="2" VerticalAlignment="Top" Width="80" Click="btn_Limpar_Cad_Click"/>
        <ComboBox x:Name="cb_Gender_Cad" Grid.Column="1" Tag="test" HorizontalAlignment="Left" Margin="480,140,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="150" SelectionChanged="cb_Gender_Cad_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}">

            <ComboBoxItem Content="Mulher Cisgênero"/>
            <ComboBoxItem Content="Homem Cisgênero"/>
            <ComboBoxItem Content="Homem Transexual"/>
            <ComboBoxItem Content="Homem Transgênero"/>
            <ComboBoxItem Content="Mulher Transexual"/>
            <ComboBoxItem Content="Mulher Transgênero"/>
            <ComboBoxItem Content="Não sei responder"/>
            <ComboBoxItem Content="Outros"/>
        </ComboBox>
        <ComboBox x:Name="cb_Estado_Cad" Grid.Column="1" HorizontalAlignment="Left" Margin="480,220,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="150" Grid.RowSpan="2" SelectionChanged="cb_Estado_Cad_SelectionChanged" >
            <ComboBoxItem Content="AC"/>
            <ComboBoxItem Content="AL"/>
            <ComboBoxItem Content="AM"/>
            <ComboBoxItem Content="AP"/>
            <ComboBoxItem Content="BA"/>
            <ComboBoxItem Content="CE"/>
            <ComboBoxItem Content="DF"/>
            <ComboBoxItem Content="ES"/>
            <ComboBoxItem Content="GO"/>
            <ComboBoxItem Content="MA"/>
            <ComboBoxItem Content="MG"/>
            <ComboBoxItem Content="MS"/>
            <ComboBoxItem Content="MT"/>
            <ComboBoxItem Content="PA"/>
            <ComboBoxItem Content="PB"/>
            <ComboBoxItem Content="PE"/>
            <ComboBoxItem Content="PI"/>
            <ComboBoxItem Content="PR"/>
            <ComboBoxItem Content="RJ"/>
            <ComboBoxItem Content="RN"/>
            <ComboBoxItem Content="RO"/>
            <ComboBoxItem Content="RR"/>
            <ComboBoxItem Content="RS"/>
            <ComboBoxItem Content="SC"/>
            <ComboBoxItem Content="SE"/>
            <ComboBoxItem Content="SP"/>
            <ComboBoxItem Content="TO"/>
        </ComboBox>
        <Button x:Name="btn_Voltar_Cad" Content="Voltar" Grid.Column="1" HorizontalAlignment="Left" Margin="530,147,0,0" Grid.Row="2" VerticalAlignment="Top" Width="80" Click="btn_Voltar_Cad_Click"/>
        <TextBlock x:Name="txt_gen" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Selecione seu gênero..." VerticalAlignment="Top" Height="16" Width="122" Foreground="#C0C0C0" Grid.Column="1" Margin="485,145,0,0" Grid.Row="1"/>
        <TextBlock x:Name="txt_UF" Grid.Column="1" HorizontalAlignment="Left" Margin="485,220,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Selecione UF..." VerticalAlignment="Top" Height="25" Width="100" Foreground="#C0C0C0" Grid.RowSpan="2"/>
        <TextBlock x:Name="txt_ps"  MinHeight="8" Grid.Column="1" HorizontalAlignment="Left" Margin="480,55,0,0" Grid.Row="2" VerticalAlignment="Top" Height="16" Width="108" TextWrapping="Wrap" Foreground="#C0C0C0" Text="Digite uma senha..."/>
    </Grid>
</Window>