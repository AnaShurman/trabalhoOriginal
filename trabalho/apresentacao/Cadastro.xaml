<Window x:Class="trabalho.apresentacao.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trabalho.apresentacao"
        mc:Ignorable="d"
        Title="Cadastro" Height="680" Width="1370" WindowState="Maximized" OpacityMask="Black" Icon="../imagens/logopequena2.png">
    <Window.Background>
        <ImageBrush ImageSource="../imagens/stars.jpg"/>
    </Window.Background>


    <Grid Margin="10,6,0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="489*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="Auto" MinWidth="889.6"/>
            <ColumnDefinition Width="287*"/>
        </Grid.ColumnDefinitions>


        <Grid.Background>
            <ImageBrush ImageSource="/trabalho;component/imagens/background1.jpg"/>
        </Grid.Background>

        <Image HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="120" Source="/trabalho;component/imagens/logogrande1.png" Grid.Row="0"  Grid.Column="0" Height="97" Width="126" Margin="26,0,24.8,488.6" Grid.RowSpan="2" >
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF180808" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.449"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.437"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image Source="/trabalho;component/imagens/borda.png"  HorizontalAlignment="Center" VerticalAlignment="Center"  RenderTransformOrigin="0.59,0.473" Height="749" Margin="-12,-57,105.6,-52.8" Grid.RowSpan="3" Width="1260" Stretch="Fill" Grid.ColumnSpan="3">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/trabalho;component/imagens/borda.png"/>
            </Image.OpacityMask>
        </Image>


        <Menu x:Name="menu" HorizontalAlignment="Left" Background="{x:Null}" Width="120" Opacity="0.85" Margin="57,157.2,0,95.6" Grid.Row="1" Grid.ColumnSpan="2" >
            <MenuItem  Header="Categorias" Foreground="#DDFFFFFF"  FontFamily="Simplicity" FontSize="25" Background="{x:Null}" FontWeight="Bold" Width="142" Height="51" Margin="-12,0,0,0" Padding="16,0,-99,0" >
                <ComboBoxItem Content="Romance" FontFamily="Simplicity"  Background="{x:Null}" MouseRightButtonDown="Romance_Click"/>
                <ComboBoxItem Content="Mangás"  FontFamily="Simplicity" Background="{x:Null}" MouseRightButtonDown="Mangas_Click"/>
                <ComboBoxItem Content="Terror"  FontFamily="Simplicity" Background="{x:Null}" MouseRightButtonDown="Terror_Click"/>
                <ComboBoxItem Content="Mistério"  FontFamily="Simplicity" Background="{x:Null}" MouseRightButtonDown="Misterio_Click"/>
            </MenuItem>
        </Menu>


        <Label x:Name="lblNome_Cad" Content="Nome completo:" Grid.Column="1" HorizontalAlignment="Left" Margin="276.2,8.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblUser_Cad" Content="Nome de usuário:" Grid.Column="1" HorizontalAlignment="Left" Margin="276.2,48.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lbl_Email_Cad" Content="Email:" Grid.Column="1" HorizontalAlignment="Left" Margin="276.2,88.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblGender_Cad" Content="Gênero:" Grid.Column="1" HorizontalAlignment="Left" Margin="276.2,128.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblCidade_Cad" Content="Cidade:" Grid.Column="1" HorizontalAlignment="Left" Margin="276.2,168.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblEstado_Cad" Content="Estado:" Grid.Column="1" HorizontalAlignment="Left" Margin="276.2,208.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblCel_Cad" Content="WhatsApp:" Grid.Column="1" HorizontalAlignment="Left" Margin="281.2,245.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lblPass_Cad" Content="Senha:" Grid.Column="1" HorizontalAlignment="Left" Margin="281.2,285.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="lbl_Confirm_Pass_Cad" Content="Confirmar senha:" Grid.Column="1" HorizontalAlignment="Left" Margin="281.2,325.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="120" Foreground="White" FontWeight="Bold"/>

        <Border BorderThickness="1"  CornerRadius="20" Padding="2"  MinHeight="8"  HorizontalAlignment="Left" Margin="515.2,9.2,0,0" Grid.Row="1" Grid.Column="1" Background="#FFF9F9F9" VerticalAlignment="Top" Height="25" Width="150">
            <TextBox x:Name="txt_Nome_Cad"   Tag="Digite seu nome..." TextWrapping="Wrap"  AcceptsTab="True" Margin="-0.2,-0.2,0,-2.6" />
        </Border>

        <Border BorderThickness="1"  CornerRadius="20" Padding="2" HorizontalAlignment="Left" Margin="515.2,49.2,0,0" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="25" Width="150" Background="#FFF9F9F9">
            <TextBox x:Name="txt_User_Cad"  Tag="Digite um username..." TextWrapping="Wrap"  AcceptsTab="True" Margin="-0.2,-0.2,0,-2.6"/>
        </Border>


        <Border BorderThickness="1"  CornerRadius="20" Padding="2" HorizontalAlignment="Left" Margin="515.2,89.2,0,0" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="25" Width="150" Background="#FFF9F9F9">
            <TextBox x:Name="txt_Email_Cad"  Tag="Digite seu email..." TextWrapping="Wrap" AutoWordSelection="True" Margin="-0.2,-0.2,0,-2.6" />
        </Border>

        <Border BorderThickness="1"  CornerRadius="20" Padding="2" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="515.2,169.2,0,0" Height="25" Width="150" Background="#FFF9F9F9">
            <TextBox x:Name="txt_Cidade_Cad"   Tag="Digite sua cidade..." TextWrapping="Wrap"   AcceptsTab="True" Margin="-0.2,-0.2,0,-2.6"/>
        </Border>

        <Border BorderThickness="1"  CornerRadius="10" Padding="2" Grid.Column="1"  HorizontalAlignment="Left" Margin="515.2,245.2,0,0" Grid.Row="1"  VerticalAlignment="Top" Height="26" Width="45" Background="#FFF6F6F6">
            <TextBox x:Name="txt_DDD_Cad"   Tag="DDD..." TextWrapping="Wrap" AcceptsTab="True" Margin="-0.2,-0.2,0.4,-2.8" />
        </Border>

        <Border  BorderThickness="1"  CornerRadius="10" Padding="2"  Grid.Column="1"  HorizontalAlignment="Left" Margin="570.2,245.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="95" Background="White">
            <TextBox x:Name="txt_Cel_Cad"  Tag="Digite seu celular..." TextWrapping="Wrap"  AcceptsTab="True" Margin="-0.2,-0.2,-0.2,-2.8"/>
        </Border>
        <Border BorderThickness="1"  CornerRadius="20" Padding="2"  MinHeight="8" Grid.Column="1" HorizontalAlignment="Left" Margin="515.2,286.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="150" Background="#FFF7F7F7">
            <PasswordBox x:Name="txt_Pass_Cad"  Tag="Digite uma senha..." Margin="1.8,-3.2,-2,-2.6"/>
        </Border>
        <Border BorderThickness="1"  CornerRadius="20" Padding="2" Grid.Column="1" HorizontalAlignment="Left" Margin="515.2,326.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="150"  Background="#FFF7F7F7">
            <PasswordBox x:Name="txt_Pass_Cad_Confirm"  Tag="Repita a senha..." Height="25" Width="150" Margin="-0.2,-4.2,-5,-1.6"  />
        </Border>

        <Image Source="https://i.pinimg.com/originals/4e/a2/ea/4ea2ea56f1798863bebccfaa2c6c38b5.png" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="351.2,240.2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" />

        <Border BorderThickness="1"  CornerRadius="20" Padding="2" Grid.Column="1" HorizontalAlignment="Left" Margin="515.2,129.2,0,0" Grid.Row="1"  Background="#FFF7F7F7" VerticalAlignment="Top" Height="25" Width="150" >
            <ComboBox x:Name="cb_Gender_Cad" HorizontalAlignment="Left" Margin="9.8,-3.2,0,-2.6" VerticalAlignment="Top" Height="25" Width="127" >
                <ComboBoxItem Content="Mulher "/>
                <ComboBoxItem Content="Homem "/>
                <ComboBoxItem Content="Não sei responder"/>
                <ComboBoxItem Content="Outros"/>
            </ComboBox>
        </Border>

        <Border BorderThickness="1"  CornerRadius="20" Padding="2" Grid.Column="1" HorizontalAlignment="Left" Margin="515.2,209.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="150"  Background="#FFF7F7F7"  >
            <ComboBox x:Name="cb_Estado_Cad" HorizontalAlignment="Left" Margin="6.8,-3.2,0,-2.6" VerticalAlignment="Top" Height="25" Width="130"  MouseRightButtonDown="txt_UF" >
                <ComboBoxItem Content="RJ"/>
                <ComboBoxItem Content="RN"/>
                <ComboBoxItem Content="RO" />
                <ComboBoxItem Content="RR"/>
                <ComboBoxItem Content="RS"/>
                <ComboBoxItem Content="SC"/>
                <ComboBoxItem Content="SE"/>
                <ComboBoxItem Content="SP"/>
                <ComboBoxItem Content="TO"/>
            </ComboBox>
        </Border>

        <Button x:Name="btn_Cadastrar_Cad" Content="Cadastrar" Grid.Column="1" HorizontalAlignment="Left" Margin="424.2,394.2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="98" Click="btn_Cadastrar_Cad_Click" Height="28"/>
        <Button x:Name="btn_Limpar_Cad" Content="Limpar" Grid.Column="1" HorizontalAlignment="Left" Margin="548.2,394.2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="btn_Limpar_Cad_Click" Height="28"/>
        <Button x:Name="btn_Voltar_Cad" Content="Voltar" Grid.Column="1" HorizontalAlignment="Left" Margin="653.2,394.2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="btn_Voltar_Cad_Click" Height="28"/>

    </Grid>
</Window>